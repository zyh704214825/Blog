<script type="text/javascript" src="../frame/layui/layui.js"></script>
<script type="text/javascript">
	var pageNow=0;
	var pageCnt=1;
	var searchCon="";
	$(function(){
		page(1)
	});
	function page(type){
		switch(type){
		case 1:pageNow=1;select();break;
		case 2:
			if(pageNow>1){
				pageNow=pageNow-1;
				select();break;
			}else{
				alert("已经是第一页");
				break;
			}
		case 3:
			if(pageNow<pageCnt){
				pageNow=pageNow+1;
				select();break;
			}else{
				alert("已经是最后一页");
				break;
			}
		case 4:pageNow=pageCnt;select();break;
		}
	}
	function select(){
		searchCon=$("#searchCon").val();
		$.ajax({
			type:"POST",
			url:"selectUsersList",
			dataType:"json",
			data:{pageNow:pageNow,searchCon:searchCon},
			//async:false,
			success:function(data){
				var map=data; 
				var list=map.list;
				var row="";
				for(var v in list){
					//debugger;
					row=row+"<tr id='trs'><td>"+list[v].users_id+"</td>"+
					"<td>"+list[v].users_no+"</td>"+
					"<td>"+list[v].users_name+"</td>";
					if(list[v].users_age==1){
						row=row+"<td>男</td>";
					}else{
						row=row+"<td>女</td>";
					}
					row=row+"<td>"+list[v].users_phone+"</td>"+
					"<td>"+list[v].users_cardid+"</td>"+
					"<tr>";
			 	}
				pageCnt=map.cnt;
				pageNow=map.now;
				$("#searchCon").val(map.searchCon)
			 	$("#tbody").html(row);
			},
			error:function(){
				alert("方法执行不成功!");
			}  
		});
	}	
		

</script>
</body>
</html>