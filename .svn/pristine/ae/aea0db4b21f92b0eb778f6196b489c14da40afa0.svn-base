<!DOCTYPE html>
<html lang="zh-CN" xmlns:th="http://www.thymeleaf.org">
<head>
    <meta charset="UTF-8">
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>文章详情</title>
    <link rel="stylesheet" href="../frame/layui/css/layui.css">
    <link rel="stylesheet" href="../frame/static/css/style.css">
    <link rel="icon" href="../frame/static/image/code.png">
    <script src="../js/jquery-2.1.4.min.js"></script>
    <script type="text/javascript">
    	function returnLast(){
    		window.location.href='/blogList';
    	}
    </script>
</head>
<body class="body">
	<!-- <form action="/updateClassify" method="post"> -->
		<div class="layui-form-item">
	        <div class="layui-inline">
	            <label class="layui-form-label">文章编号</label>
	            <div class="layui-input-inline">
	                <input type="text" name="blog_id" autocomplete="off" class="layui-input" th:value="${blog.blog_id}" readonly="readonly">
	            </div>
	        </div>
        </div>
        <div class="layui-form-item">
	        <div class="layui-inline">
	            <label class="layui-form-label">文章作者</label>
	            <div class="layui-input-inline">
	                <input type="text" name="blog_users.users_name" autocomplete="off" class="layui-input" th:value="${blog.blog_users.users_name}" readonly="readonly">
	            </div>
	        </div>
        </div>
        <div class="layui-form-item">
	        <div class="layui-inline">
	            <label class="layui-form-label">发表日期</label>
	            <div class="layui-input-inline">
	                <input type="text" name="blog_date" autocomplete="off" class="layui-input" th:value="${#dates.format(blog.blog_date, 'yyyy-MM-dd')}" readonly="readonly">
	            </div>
	        </div>
        </div>
        <div class="layui-form-item">
	        <div class="layui-inline">
	            <label class="layui-form-label">所属类型</label>
	            <div class="layui-input-inline">
	                <input type="text" name="blog_cls.cls_name" autocomplete="off" class="layui-input" th:value="${blog.blog_cls.cls_name}" readonly="readonly">
	            </div>
	        </div>
        </div><div class="layui-form-item">
	        <div class="layui-inline">
	            <label class="layui-form-label">评论数量</label>
	            <div class="layui-input-inline">
	                <input type="text" name="comm_count" autocomplete="off" class="layui-input" th:value="${blog.comm_count}" readonly="readonly">
	            </div>
	        </div>
        </div>
		<div class="layui-form-item">
	        <div class="layui-inline">
	            <label class="layui-form-label">文章标题</label>
	            <div class="layui-input-inline">
	                <input type="text" name="blog_name" autocomplete="off" class="layui-input" th:value="${blog.blog_name}" readonly="readonly">
	            </div>
	        </div>
        </div>
		<div class="layui-form-item layui-form-text">
        	<label class="layui-form-label">文章内容</label>
        	<div class="layui-input-block">
         	    <textarea class="layui-textarea" name="blog_remark" cols="10" th:text="${blog.blog_remark}" readonly="readonly">
         	    </textarea>
        	</div>
    	</div>
		<div class="layui-form-item layui-form-text">
			<div class="layui-input-block">
         	   <button class="layui-btn" lay-submit="" lay-filter="demo1" type="button" onclick="returnLast()">返回</button>
        	</div>
		</div>
	<!-- </form> -->
<script type="text/javascript" src="../frame/layui/layui.js"></script>
<script type="text/javascript">
    // you code ...


</script>
</body>
</html>